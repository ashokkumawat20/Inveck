<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E2E1"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#6d40ff"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/back_arrow1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight=".2"
            android:src="@drawable/left_nev_arrow"
            android:tint="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight=".8"
            android:text="Add New Line Item"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/CashDeposit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">
        <AutoCompleteTextView
            android:id="@+id/SearchItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="left|center"
            android:hint="Search Item Name..."
            android:inputType="textCapSentences"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="15sp">

            <requestFocus />
        </AutoCompleteTextView>

        <EditText
            android:id="@+id/itemNameEdtTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#E0DADA"
            android:gravity="top|left"
            android:hint="Enter Item Name"
            android:inputType="text|textMultiLine"
            android:paddingLeft="6dp"
            android:scrollbars="vertical"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/color_faintgray" />

        <EditText
            android:id="@+id/itemNumberEdtTxt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="#E0DADA"
            android:gravity="top|left"
            android:hint="Enter Item Code"
            android:inputType="text"
            android:paddingLeft="6dp"
            android:scrollbars="vertical"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/color_faintgray" />

        <Spinner
            android:id="@+id/spinnerLocation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_spinner_background"
            android:popupBackground="@color/color_black"
            android:spinnerMode="dialog"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <EditText
            android:id="@+id/itemLocationEdtTxt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#E0DADA"
            android:gravity="top|left"
            android:hint="Enter Location"
            android:inputType="textCapSentences|textMultiLine"
            android:lines="8"
            android:maxLines="10"
            android:minLines="2"
            android:paddingLeft="6dp"
            android:scrollbars="vertical"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/color_faintgray"
            android:visibility="gone" />

        <EditText
            android:id="@+id/qntyEdtTxt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="#E0DADA"
            android:gravity="top|left"
            android:hint="Enter Quantity"
            android:inputType="number"
            android:paddingLeft="6dp"
            android:scrollbars="vertical"
            android:textColor="@color/textcolor"
            android:textColorHint="@color/color_faintgray" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />


    <LinearLayout
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="65dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/verifibackground"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:text="Submit"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>
    </ScrollView>
</LinearLayout>
