                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/baseline_expand_less_black_36"

                        android:tint="#6d40ff"
                        android:visibility="gone" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="12dp"
                        android:layout_toLeftOf="@+id/location"
                        android:background="@drawable/roundbackground"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/takeImage"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:src="@drawable/baseline_camera_alt_black_36"
                            android:tint="#FFFFFF" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="12dp"
                        android:layout_toLeftOf="@+id/remark"
                        android:background="@drawable/roundbackground"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:src="@drawable/baseline_gps_fixed_black_36"
                            android:tint="#ffffff" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="12dp"
                        android:layout_toLeftOf="@+id/signature"
                        android:background="@drawable/roundbackground"
                        android:orientation="vertical"
                        android:padding="5dp"
                       >

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:tint="#FFFFFF"
                            android:src="@drawable/baseline_description_black_36" />
                    </FrameLayout>
                    <!--  android:background="@drawable/roundbackground"-->
                    <FrameLayout
                        android:id="@+id/signature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/roundbackground"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:padding="5dp"
                            android:tint="#FFFFFF"
                            android:src="@drawable/signature"
                            />
                    </FrameLayout>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</FrameLayout>